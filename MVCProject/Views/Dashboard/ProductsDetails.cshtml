
@{

    Layout = "_DashboardLayout";

}
@model List<Product>


<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>SB Admin 2 - Tables</title>

    <!-- Custom fonts for this template -->
    <link href="vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
    rel="stylesheet">

    <!-- Custom styles for this template -->
    <link href="~/css/sb-admin-2.min.css" rel="stylesheet">

    <!-- Custom styles for this page -->
    <link href="~/vendor/datatables/dataTables.bootstrap4.min.css" rel="stylesheet">

</head>

<body id="page-top">


    <!-- Page Wrapper -->
    <div id="wrapper">

        <!-- Sidebar -->

        <!-- End of Sidebar -->
        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">

                <!-- Topbar -->
                <nav class="navbar navbar-expand navbar-light bg-white topbar mb-4 static-top shadow">



                    <!-- Topbar Search -->
                    <form class="d-none d-sm-inline-block form-inline mx-auto my-2 my-md-0 mw-100 navbar-search">
                        <div class="input-group">
                            <input id="categorySearch" type="text" class="form-control bg-light border-0 small"
                                   placeholder="Search by QRCode..." aria-label="Search" aria-describedby="basic-addon2">
                            <div class="input-group-append">
                                <button class="btn btn-primary" type="button">
                                    <i class="fas fa-search fa-sm"></i>
                                </button>
                            </div>
                        </div>
                    </form>

                    <!-- Topbar Navbar -->


                </nav>
                <!-- End of Topbar -->
                <!-- Begin Page Content -->
                <div class="container-fluid">

                    <!-- Page Heading -->
                    <h1 class="h3 mb-2 text-gray-800">Products Details</h1>

                    <h3> Here you can view, edit, and delete all product details to keep your inventory accurate and up to date.</h3>



                    <!-- DataTales Example -->
                    <div class="card shadow mb-4">
                        <div class="card-header py-3">
                            <h6 class="m-0 font-weight-bold text-primary">Products Details</h6>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table  class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                    <thead>
                                        <tr>
                                            <th>QRCode</th>
                                            <th>Category Name</th>
                                            <th>Size</th>
                                            <th>Price</th>
                                            <th>Quantity</th>
                                            <th>Description</th>
                                             <th>Image</th> 
                                            <th>Edit</th>
                                            <th>Delete</th>
                                        </tr>
                                    </thead>

                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>@item.QRCode</td>
                                                <!-- Note: inputs have form="form-@item.ID" so they will be submitted by that form -->
                                                <td>

                                                    <select name="CategoryID" class="form-control" form="form-@item.ID">

                                                        @foreach (Category cat in ViewBag.Categort)
                                                        {
                                                            if (cat.ID == item.CategoryID)
                                                            {
                                                                <option value="@cat.ID" selected>@cat.Name</option>
                                                            }
                                                            else
                                                            {
                                                                <option value="@cat.ID">@cat.Name</option>
                                                                
                                                            }

                                                            
                                                        }
                                                    </select>
                                                </td>



                                                <td>
                                                    <input type="text" name="Size" class="form-control"
                                                           value="@item.Size" form="form-@item.ID" />
                                                </td>
                                                <td>
                                                    <input type="text" name="Price" class="form-control"
                                                           value="@item.Price" form="form-@item.ID" />
                                                </td>
                                                <td>
                                                    <input type="text" name="Quantity" class="form-control"
                                                           value="@item.Quantity" form="form-@item.ID" />
                                                </td>
                                                <td>
                                                    <input type="text" name="Description" class="form-control"
                                                           value="@item.Description" form="form-@item.ID" />
                                                </td>
                                                <td class="p-0 text-center align-middle">
                                                    @if (!string.IsNullOrEmpty(item.Image))
                                                    {
                                                        <img src="~/UploadedImages/@item.Image"
                                                             alt="Product Image"
                                                             class="img-fluid"
                                                             style="width: 100%; height: 100px; object-fit: cover;" />
                                                    }
                                                    else
                                                    {
                                                        <span class="text-muted d-block py-3">No Image</span>
                                                    }
                                                </td>
                                               
                                                <td>
                                                    <form id="form-@item.ID" method="post" asp-action="EditProduct">
                                                        @* Anti-forgery token recommended *@
                                                        @Html.AntiForgeryToken()
                                                        <input type="hidden" name="ID" value="@item.ID" />
                                                        <button type="submit" class="btn btn-warning btn-block">Edit</button>
                                                    </form>
                                                </td>

                                                <!-- Delete has its own small form that sends only id -->
                                                <td>
                                                    <form method="post" asp-action="DeleteProduct" onsubmit="return confirm('Are you sure you want to delete this customer?');">
                                                        @Html.AntiForgeryToken()
                                                        <input type="hidden" name="id" value="@item.ID" />
                                                        <button type="submit" class="btn btn-danger btn-block">Delete</button>
                                                    </form>
                                                </td>
                                            </tr>
                                        }

                                       
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>

                </div>
                <!-- /.container-fluid -->

            </div>
            <!-- End of Main Content -->
            <!-- Footer -->
            <footer class="sticky-footer bg-white">
                <div class="container my-auto">
                    <div class="copyright text-center my-auto">
                        <span>Copyright &copy; Your Website 2020</span>
                    </div>
                </div>
            </footer>
            <!-- End of Footer -->

        </div>
        <!-- End of Content Wrapper -->

    </div>
    <!-- End of Page Wrapper -->
    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>

   

    <!-- Bootstrap core JavaScript-->
    <script src="~/vendor/jquery/jquery.min.js"></script>
    <script src="~/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="~/vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="~/js/sb-admin-2.min.js"></script>

    <!-- Page level plugins -->
    <script src="~/vendor/datatables/jquery.dataTables.min.js"></script>
    <script src="~/vendor/datatables/dataTables.bootstrap4.min.js"></script>

    <!-- Page level custom scripts -->
    <script src="~/js/demo/datatables-demo.js"></script>
    <script src="~/vendor/jquery/jquery.min.js"></script>
    <script>
        document.getElementById("categorySearch").addEventListener("keyup", function () {
            var searchValue = this.value.toLowerCase();
            var rows = document.querySelectorAll("#dataTable tbody tr");

            rows.forEach(function (row) {
               
                var qrCodeCell = row.cells[0];
                var qrCodeText = qrCodeCell ? qrCodeCell.textContent.toLowerCase().trim() : "";

                if (qrCodeText.includes(searchValue)) {
                    row.style.display = "";
                } else {
                    row.style.display = "none";
                }
            });
        });
    </script>

</body>

</html>