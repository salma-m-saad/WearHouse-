<!-- Masthead-->
<header class="masthead">
    <div class="container">
        <div class="masthead-subheading">Welcome</div>
        <div class="masthead-heading text-uppercase">It's Nice To Meet You Again</div>
        <a class="btn btn-primary btn-xl text-uppercase" href="#services">Let's Go</a>
    </div>
</header>

<section class="page-section" id="services">
    <div class="container">
        <div class="text-center">
            <h2 class="section-heading text-uppercase">Services</h2>
            <h3 class="section-subheading text-muted">Our Website Services.</h3>
        </div>

        
        <div class="row text-center justify-content-center">
            <!-- Sell Product -->
            <div class="col-md-5 mb-4">
                <a href="~/HomePage/SelectCustomer" class="service-card text-decoration-none">
                    <div class="card shadow-lg border-0 h-100">
                        <div class="card-body py-5">
                            <span class="fa-stack fa-4x mb-3">
                                <i class="fas fa-circle fa-stack-2x text-primary"></i>
                                <i class="fas fa-store fa-stack-1x fa-inverse"></i>
                            </span>
                            <h4 class="my-3 text-dark fw-bold">Sell Product</h4>
                        </div>
                    </div>
                </a>
            </div>

            <!-- Add Product -->
            <div class="col-md-5 mb-4">
                <a href="~/HomePage/AddProduct" class="service-card text-decoration-none">
                    <div class="card shadow-lg border-0 h-100">
                        <div class="card-body py-5">
                            <span class="fa-stack fa-4x mb-3">
                                <i class="fas fa-circle fa-stack-2x text-primary"></i>
                                <i class="fas fa-plus fa-stack-1x fa-inverse"></i>
                            </span>
                            <h4 class="my-3 text-dark fw-bold">Add Product</h4>
                        </div>
                    </div>
                </a>
            </div>
        </div>

     
        <div class="row text-center justify-content-center">
            <!-- Add Customer -->
            <div class="col-md-5 mb-4">
                <a href="~/HomePage/AddCustomer" class="service-card text-decoration-none">
                    <div class="card shadow-lg border-0 h-100">
                        <div class="card-body py-5">
                            <span class="fa-stack fa-4x mb-3">
                                <i class="fas fa-circle fa-stack-2x text-primary"></i>
                                <i class="fas fa-user-plus fa-stack-1x fa-inverse"></i>
                            </span>
                            <h4 class="my-3 text-dark fw-bold">Add Customer</h4>
                        </div>
                    </div>
                </a>
            </div>

            <!-- Dashboard -->
            <div class="col-md-5 mb-4">
                <a href="~/Dashboard/Charts" class="service-card text-decoration-none">
                    <div class="card shadow-lg border-0 h-100">
                        <div class="card-body py-5">
                            <span class="fa-stack fa-4x mb-3">
                                <i class="fas fa-circle fa-stack-2x text-primary"></i>
                                <i class="fas fa-chart-pie fa-stack-1x fa-inverse"></i>
                            </span>
                            <h4 class="my-3 text-dark fw-bold">Dashboard</h4>
                        </div>
                    </div>
                </a>
            </div>
        </div>

    </div>
</section>
