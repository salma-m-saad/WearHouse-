@model List<Customer>
@section Styles {
    <style>
      
        #mainNav {
            background-color: #212529 !important; 
        }


        #content {
            margin-top: 80px; 
        }

       
        #phoneSearch {
            margin-top: 10px;
        }

        .container-fluid {
            width:95%;
        }

        #phoneSearchForm {
            display: flex;
            justify-content: center;
            margin-top: 20px;
            width: 100%;
        }

            #phoneSearchForm input#phoneSearch {
                width: 50%; 
                max-width: 600px;
            }

            #phoneSearchForm button {
                margin-left: 10px;
            }

        #dataTable tbody tr:hover {
            background-color: #fff3cd;
            cursor: pointer; 
        }
    </style>
}

<!DOCTYPE html>
<html lang="en">



<body id="page-top">


    <!-- Page Wrapper -->
    <div id="wrapper">

     
        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">

                <nav class="navbar navbar-expand navbar-light bg-white topbar mb-4 static-top shadow">

                    <div class="top-actions">
                        <a href="javascript:history.back()" class="btn-custom btn-back">
                            <i class="fa-solid fa-arrow-left"></i> Back
                        </a>
                    </div>

                    <div class="container mt-3">
                        <form class="d-flex" id="phoneSearchForm">
                            <input id="phoneSearch" type="text" class="form-control me-2"
                                   placeholder="Search by phone..." aria-label="Search">
                            <button class="btn btn-primary" type="button">
                                <i class="fas fa-search"></i>
                            </button>
                        </form>
                    </div>

                   

                </nav>
            
                <!-- Begin Page Content -->
                <div class="container-fluid">

                    <!-- Page Heading -->

                    <h3>  Select customer.</h3>



                    <!-- DataTales Example -->
                    <div class="card shadow mb-4">
                        <div class="card-header py-3">
                            <h6 class="m-0 font-weight-bold text-primary">Customers Details</h6>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                    <thead>
                                        <tr>
                                            <th>FirstName</th>
                                            <th>LastName</th>
                                            <th>Phone</th>
                                            <th>NationalID</th>
                                            <th>Address</th>
                                            
                                        </tr>
                                    </thead>

                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr onclick="location.href='@Url.Action("SelectProducts", "HomePage", new {     ID = item.ID })'">
                                                <td>@item.FirstName</td>
                                                <td>@item.LastName</td>
                                                <td>@item.Phone</td>
                                                <td>@item.NationalID</td>
                                                <td>@item.Address</td>
                                            </tr>
                                        }


                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>

                </div>
                <!-- /.container-fluid -->

            </div>
            <!-- End of Main Content -->
         
           

        </div>
        <!-- End of Content Wrapper -->

    </div>
    <!-- End of Page Wrapper -->
    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>



    <!-- Bootstrap core JavaScript-->
    <script src="~/vendor/jquery/jquery.min.js"></script>
    <script src="~/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="~/vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="~/js/sb-admin-2.min.js"></script>

    <!-- Page level plugins -->
    <script src="~/vendor/datatables/jquery.dataTables.min.js"></script>
    <script src="~/vendor/datatables/dataTables.bootstrap4.min.js"></script>

    <!-- Page level custom scripts -->
    <script src="~/js/demo/datatables-demo.js"></script>
    <script src="~/vendor/jquery/jquery.min.js"></script>
    <script>
            document.getElementById("phoneSearch").addEventListener("keyup", function () {
            var searchValue = this.value.toLowerCase();
            var rows = document.querySelectorAll("#dataTable tbody tr");

            rows.forEach(function (row) {
               
                var phone = row.cells[2].textContent.toLowerCase();

                if (phone.includes(searchValue)) {
                    row.style.display = "";
                } else {
                    row.style.display = "none";
                }
            });
        });

    </script>
</body>

</html>
